// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("AGENT") // ADMIN, AGENT, AUDITOR
  avatar    String?
  phone     String?
  // KYC
  aadharNo    String?
  panNo       String?
  aadharFront String?
  aadharBack  String?
  panPhoto    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customers     Customer[]
  calls         CallLog[]
  notes         Note[]
  policies      Policy[]
  claims        Claim[]
}

model Customer {
  id          String   @id @default(cuid())
  // Basic Info
  firstName   String
  lastName    String
  email       String?
  phone       String
  dob         String?
  gender      String?
  address     String?
  city        String?
  state       String?
  pincode     String?
  occupation  String?
  income      String?
  height      String?
  weight      String?
  // KYC
  aadharNo    String?
  panNo       String?
  kycStatus   String   @default("PENDING") // PENDING, VERIFIED, REJECTED
  // Photos & Documents
  livePhoto   String?
  aadharFront String?
  aadharBack  String?
  panPhoto    String?
  // Pre-existing conditions
  preExisting String?  // JSON string
  // Pipeline Stage
  stage           String   @default("LEAD") // LEAD, PITCHED, INTERESTED, CONVERTED, LOST
  leadSource      String?  // WALK_IN, REFERRAL, COLD_CALL, SOCIAL_MEDIA, WEBSITE, CAMP, OTHER
  leadDate        DateTime @default(now()) // When the lead was first added
  pitchedDate     DateTime? // When agent pitched insurance benefits
  interestedDate  DateTime? // When customer showed interest
  convertedDate   DateTime? // When policy was issued / customer converted
  lostDate        DateTime? // When customer was marked lost
  lostReason      String?   // Reason for losing
  // Status
  status      String   @default("ACTIVE")
  agentId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  agent        User       @relation(fields: [agentId], references: [id])
  policies     Policy[]
  family       FamilyMember[]
  notes        Note[]
  callLogs     CallLog[]
  claims       Claim[]
  proposerFor  Policy[]   @relation("ProposerRelation")

  @@index([agentId])
  @@index([status])
  @@index([stage])
}

model FamilyMember {
  id           String   @id @default(cuid())
  customerId   String
  name         String
  relation     String
  dob          String?
  gender       String?
  preExisting  String?
  insured      Boolean  @default(false)
  createdAt    DateTime @default(now())

  customer     Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  policies     Policy[]
}

model Policy {
  id             String   @id @default(cuid())
  policyNumber   String   @unique
  type           String   // HEALTH, MOTOR, LIFE, TERM
  subType        String?
  // Insurer Details
  company        String
  planName       String
  sumInsured     Float?
  premium        Float
  paymentMode    String   @default("ANNUAL") // ANNUAL, SEMI, QUARTER, MONTHLY
  // Dates
  startDate      String
  endDate        String
  issueDate      String?
  // Status
  status         String   @default("ACTIVE") // ACTIVE, EXPIRED, CANCELLED, RENEWED
  tags           String?  // JSON string of tags
  // Relations
  customerId     String
  proposerId     String?
  agentId        String
  // Motor specific
  vehicleNo      String?
  vehicleModel   String?
  vehicleYear    String?
  // Life specific
  nominee        String?
  nomineeRelation String?
  // Notification
  reminderSent   Boolean  @default(false)
  
  // Commission
  commissionPct   Float?   // Commission percentage e.g. 15.0
  commissionAmt   Float?   // Calculated: premium * commissionPct / 100
  
  // Missing fields from UI
  externalDocUrl String?
  familyMemberId String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  customer       Customer @relation(fields: [customerId], references: [id])
  proposer       Customer? @relation("ProposerRelation", fields: [proposerId], references: [id])
  familyMember   FamilyMember? @relation(fields: [familyMemberId], references: [id])
  agent          User     @relation(fields: [agentId], references: [id])
  documents      Document[]

  @@index([agentId])
  @@index([status])
  @@index([type])
  @@index([endDate])
  @@index([familyMemberId])
}

model Document {
  id          String   @id @default(cuid())
  policyId    String
  name        String
  type        String
  url         String
  size        Int?
  uploadedAt  DateTime @default(now())
  lastDownloadedAt DateTime?
  createdAt   DateTime @default(now())

  policy      Policy   @relation(fields: [policyId], references: [id], onDelete: Cascade)
}

model CallLog {
  id          String   @id @default(cuid())
  customerId  String
  agentId     String
  type        String   // INCOMING, OUTGOING, MISSED
  duration    Int?     // seconds
  notes       String?
  outcome     String?  // INTERESTED, NOT_INTERESTED, CALLBACK, POLICY_SOLD, RENEWAL
  callDate    DateTime @default(now())

  customer    Customer @relation(fields: [customerId], references: [id])
  agent       User     @relation(fields: [agentId], references: [id])
}

model Claim {
  id          String   @id @default(cuid())
  claimNo     String?
  customerId  String
  policyId    String?
  agentId     String
  type        String   // OWN_DAMAGE, THIRD_PARTY, HEALTH, LIFE, THEFT
  date        String   // date of claim filing YYYY-MM-DD
  amount      Float?
  settled     Float?   // amount actually settled
  status      String   @default("FILED") // FILED, UNDER_REVIEW, APPROVED, REJECTED, SETTLED
  insurer     String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  agent       User     @relation(fields: [agentId], references: [id])

  @@index([customerId])
  @@index([agentId])
}

model Note {
  id          String   @id @default(cuid())
  customerId  String
  agentId     String
  content     String
  type        String   @default("GENERAL") // GENERAL, FOLLOWUP, COMPLAINT, RENEWAL
  createdAt   DateTime @default(now())

  customer    Customer @relation(fields: [customerId], references: [id])
  agent       User     @relation(fields: [agentId], references: [id])
}

model Notification {
  id          String   @id @default(cuid())
  title       String
  message     String
  type        String   // RENEWAL, PAYMENT, BIRTHDAY, FOLLOWUP
  targetId    String?  // policyId or customerId
  targetType  String?
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model OTPVerification {
  id        String   @id @default(cuid())
  target    String   // could be an email (e.g., test@test.com) or a phone number
  code      String   // the 6-digit string
  expiresAt DateTime // the timestamp this OTP becomes invalid
  verified  Boolean  @default(false) // becomes true once the user enters it correctly
  createdAt DateTime @default(now())

  @@index([target])
}

model InsuranceCompany {
  id          String   @id @default(cuid())
  name        String
  logo        String?  // Cloudinary URL
  category    String   @default("GENERAL") // HEALTH, MOTOR, LIFE, GENERAL
  contact     String?  // Contact number
  email       String?
  website     String?
  products    String?  // JSON: [{ planName, type, minPremium, commissionPct }]
  notes       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WhatsAppSettings {
  id            String   @id @default(uuid())
  phoneNumberId String   // Meta Phone Number ID
  accessToken   String   // Meta Graph API Token
  isActive      Boolean  @default(true)
  updatedAt     DateTime @updatedAt
}

model WhatsAppLog {
  id           String   @id @default(uuid())
  customerId   String
  customerName String
  phone        String
  messageType  String   // 'BIRTHDAY', 'RENEWAL_30', 'RENEWAL_15', 'RENEWAL_3'
  status       String   // 'SUCCESS', 'FAILED'
  errorMessage String?
  sentAt       DateTime @default(now())
}
